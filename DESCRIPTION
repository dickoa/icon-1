Package: icon
Type: Package
Title: SVG Icons for R Documents and Apps
Version: 0.1.0.9000
Authors@R: c(
    person("Mitchell", "O'Hara-Wild", email = "mail@mitchelloharawild.com", role = c("aut", "cre")),
